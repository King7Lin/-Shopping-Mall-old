       <view class='img'><open-data type="userAvatarUrl"></open-data></view><view class='text'><open-data type="userNickName"></open-data></view>
    <!-- </navigator> -->
    </navigator>
  </view>
  <navigator url="/page/MyOrderPage/MyOrderPage" class='item'>
    <view class='left'>
      我的订单
    </view>
    <view class='right'>
      <text>查看全部订单</text>
      <image src='../images/my_order.png'></image>
    </view>
  </navigator>
  <view class='icon'>
    <navigator url="/pages/order/index?type=1" hover-class="none" >
