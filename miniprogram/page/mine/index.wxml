      <image src='../images/my_order.png'></image>
    </view>
  </navigator>
  <navigator url="/page/GuidePage/GuidePage" class='item'>
    <view class='left'>
      使用指南
    </view>
    <view class='right'>
      <image src='../images/my_order.png'></image>
    </view>
  </navigator>
  <button type="warn" class="send" bindtap="tosend">
    发布
  </button>
