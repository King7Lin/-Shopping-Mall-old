<view class="container">
    <view class="login-icon">
        <image class="login-img"  src="../images/11.jpeg"></image>
    </view>
    <form bindsubmit="formsubmit">
    <view class="login-from">
        <!--手机号-->
        <view class="inputView">
            <image class="nameImage" src="../LoginPage/images/shoujihao.png"></image>
            <label class="loginLab">手机号</label>
            <input class="inputText" name='phoneNumber' placeholder="请输入手机号"  />
        </view>
        <view class="line"></view>
        <!--密码-->
        <view class="inputView">
            <image class="keyImage" src="../LoginPage/images/mima.png"></image>
            <label class="loginLab">密码</label>
            <input class="inputText" name='password' password="true" placeholder="请输入密码"  />
        </view>
    <!--按钮-->
        <view class="loginBtnView">
            <button class="loginBtn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
                disabled="{{disabled}}" form-type="submit">登录</button>
        </view>
        <!-- <view class="registerBtnView">
            <button class="registerBtn" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
                disabled="{{disabled}}" bindtap="getUserProfile">授权</button>
        </view> -->
    </view>
    </form>
</view>