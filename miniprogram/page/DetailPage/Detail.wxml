<!-- banner -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{pic}}" wx:key="this">
    <swiper-item>
      <image src="{{item}}" data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>
<scroll-view scroll-y="true">
  <view class="detail" >
    <text class="title">{{detail.name}} {{detail.author}} 著</text>
    <text class="price">￥{{detail.money}}</text>
  </view>
  <view class="separate"></view>
  <!-- sku选择 -->
  <!-- <text bindtap="toggleDialog">请选择购买数量</text> -->
  <view class="separate"></view>
  <text>商品评价</text>
  <text class="text-remark">东西还可以，好评~</text>
  <view class="separate"></view>
  <text style="font-weight: bold;">商品详情</text>
  <block wx:for="{{pic}}" wx:key="this">
    <image class="image_detail" src="{{item}}" />
  </block>
  <view class="temp"></view>
</scroll-view>
<!-- 底部悬浮栏 -->
<view class="detail-nav">
  <button>
    <image class="src" bindtap="toCar" src="../images/cart.jpeg" />
  </button>
  <view class="line_nav"></view>
  <button bindtap="">
    <image class="src" bindtap="addLike" src="{{isLike?'../images/heart.jpeg':'../images/heart.jpeg'}}" />
  </button>
  <button class="button-green" bindtap="addCar" formType="submit">加入购物车</button>
  <button class="button-red" bindtap="immeBuy" formType="submit">立即购买</button>
</view>


